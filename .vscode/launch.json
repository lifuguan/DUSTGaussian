            "name": "convert",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/convert_scripts/convert_nerf_to_waymo.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },        
        {
            "env":{
                "CUDA_VISIBLE_DEVICES": "3"
            },
            "name": "train: dust2mvsplat",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_dust2mvsplat.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--config", "configs/train_mvsplat.yaml", "--expname", "debug", 
